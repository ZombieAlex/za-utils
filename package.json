{
  "name": "za-utils",
  "version": "1.0.0",
  "description": "A suite of utility functions for Node development in TypeScript",
  "repository": "ZombieAlex/za-utils",
  "type": "module",
  "exports": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "engines": {
    "node": ">=14.16"
  },
  "scripts": {
    "test": "xo --fix && tsc --noEmit && c8 ava",
    "build": "tsc -p ./tsconfig.build.json"
  },
  "files": [
    "lib"
  ],
  "author": "ZombieAlex",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ZombieAlex/za-utils/issues"
  },
  "homepage": "https://github.com/ZombieAlex/za-utils#readme",
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.191",
    "ava": "^5.1.0",
    "c8": "^7.12.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "xo": "^0.53.1"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "all",
    "singleQuote": false,
    "bracketSpacing": true
  },
  "xo": {
    "ignores": [
      "lib"
    ],
    "prettier": true,
    "rules": {}
  },
  "ava": {
    "files": [
      "test/*"
    ],
    "timeout": "1m",
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "c8": {
    "reporter": [
      "text",
      "lcov"
    ]
  }
}